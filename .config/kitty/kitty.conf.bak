# Shell
shell /bin/fish

# Kitty mod
kitty_mod shift+ctrl

# Window dimensions
initial_window_width 120c
initial_window_height 32c

# Opacity
background_opacity 0.85

# Dynamic window title
allow_remote_control true

# Scrolling history
scrollback_lines 10000

# Scrolling multiplier (Not directly configurable in Kitty)

# Font settings
font_family JetBrainsMono NF
italic_font JetBrainsMono NF
bold_font JetBrainsMono NF
font_size 10

# Environment variable
term xterm-kitty

# Cursor
cursor_shape beam

# Audio bell
enable_audio_bell no

# Window
remember_window_size  yes
initial_window_width  640
initial_window_height 400

# Allow clipboard
clipboard_control write-clipboard write-primary

# MAPS
map alt+q new_tab_with_cwd
map kitty_mod+h previous_window
map kitty_mod+l next_window
map kitty_mod+k previous_window
map kitty_mod+right resize_window narrower 4
map kitty_mod+left resize_window wider 4
map kitty_mod+up resize_window taller 4
map kitty_mod+down resize_window shorter 4
map kitty_mod+i set_tab_title
map alt+f next_layout

# TABS
map kitty_mod+1 goto_tab 1
map kitty_mod+2 goto_tab 2
map kitty_mod+3 goto_tab 3
map kitty_mod+4 goto_tab 4
map kitty_mod+5 goto_tab 5
map kitty_mod+6 goto_tab 6
map kitty_mod+7 goto_tab 7
map kitty_mod+8 goto_tab 8
map kitty_mod+9 goto_tab 9

tab_bar_edge bottom

# Remove ctrl+shift+n bind
map ctrl+shift+n no_op

#: Which edge to show the tab bar on, top or bottom

tab_bar_margin_width 2.0

#: The margin to the left and right of the tab bar (in pts)

tab_bar_style powerline


# BEGIN_KITTY_THEME
# Kanagawa
include current-theme.conf
# END_KITTY_THEME
